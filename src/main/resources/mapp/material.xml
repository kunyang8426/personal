<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kazma.dao.MaterialDao">
    <resultMap id="materialBase" type="com.kazma.entity.MaterialBase">
        <result property="materialBaseId" javaType="int" column="id"/>
        <result property="materialName" javaType="string" column="name"/>
        <result property="materialType" javaType="int" column="type"/>
        <result property="requirement" javaType="string" column="requirement"/>
        <result property="inspectionRequirement" javaType="string" column="inspection_requirement"/>
        <result property="inspectionRules" javaType="string" column="inspection_rules"/>
        <result property="remark" javaType="string" column="remark"/>
    </resultMap>


    <insert id="insertMaterialBase" parameterType="com.kazma.entity.MaterialBase">
        INSERT INTO material_base(id,name,type,requirement,inspection_requirement,inspection_rules,remark,create_time)
        VALUES (#{materialBaseId},#{materialName},#{materialType},#{requirement},#{inspectionRequirement},#{inspectionRules},#{remark},now())
    </insert>

    <select id="selectMaterialBase"  resultMap="materialBase">
        SELECT * FROM material_base;
    </select>
</mapper>
