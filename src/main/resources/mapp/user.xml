<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kazma.dao.UserDao">
    <resultMap id="user" type="com.kazma.entity.User">
        <result property="userId" javaType="int" column="user_id"/>
        <result property="userName" javaType="string" column="user_name"/>
        <result property="loginName" javaType="string" column="login_name"/>
        <result property="password" javaType="string" column="password"/>
        <result property="jobNum" javaType="string" column="job_num"/>
        <result property="mobile" javaType="string" column="mobile"/>
        <result property="departmentId" javaType="int" column="department_id"/>
        <result property="departmentName" javaType="string" column="department_name"/>
        <result property="role" javaType="string" column="role"/>
        <result property="menuPermission" javaType="string" column="menu_permission"/>
        <result property="resPermission" javaType="string" column="res_permission"/>
    </resultMap>


    <insert id="regUser" parameterType="com.kazma.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user_base(login_name,password)
        VALUES (#{loginName},#{password})
    </insert>

    <select id="login" resultMap="user" parameterType="com.kazma.entity.User">
        SELECT user_id,user_name,job_num,mobile,department_id,department_name
        FROM user_base
        WHERE login_name = #{loginName} AND password = #{password}
    </select>

    <update id="fillUser" parameterType="com.kazma.entity.User">
        UPDATE user_base
        SET
        <if test="jobNum != null">
            job_num = #{jobNum},
        </if>
        <if test="mobile != null">
            mobile = #{mobile},
        </if>
        <if test="departmentId != null">
            department_id = #{departmentId},
        </if>
        <if test="departmentName != null">
            department_name = #{departmentName},
        </if>
        <if test="departmentName != null">
            user_name = #{userName}
        </if>
        WHERE user_id = #{userId}
    </update>

    <select id="getUserById" resultMap="user" parameterType="com.kazma.entity.User">
        SELECT user_id,user_name,job_num,mobile,department_id,department_name
        FROM user_base
        WHERE user_id = #{userId}
    </select>

</mapper>
