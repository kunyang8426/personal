<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kazma.dao.UserDao">
    <resultMap id="user" type="com.kazma.entity.User">
        <result property="userId" javaType="int" column="user_id"/>
        <result property="userName" javaType="string" column="user_name"/>
        <result property="loginName" javaType="string" column="login_name"/>
        <result property="password" javaType="string" column="password"/>
        <result property="jobNum" javaType="string" column="job_num"/>
        <result property="mobile" javaType="string" column="mobile"/>
        <result property="departmentId" javaType="int" column="department_id"/>
        <result property="departmentName" javaType="string" column="department_name"/>
        <result property="role" javaType="string" column="role"/>
        <result property="menuPermission" javaType="string" column="menu_permission"/>
        <result property="resPermission" javaType="string" column="res_permission"/>
        <result property="isAdmin" javaType="int" column="is_admin"/>
    </resultMap>

    <resultMap id="role" type="com.kazma.entity.Role">
        <result property="roleId" javaType="int" column="role_id"/>
        <result property="roleName" javaType="string" column="role_name"/>
        <result property="menuPermission" javaType="string" column="menu_permission"/>
        <result property="resPermission" javaType="string" column="res_permission"/>
    </resultMap>

    <resultMap id="department" type="com.kazma.entity.Department">
        <result property="departmentId" javaType="int" column="id"/>
        <result property="departmentName" javaType="string" column="department_name"/>
        <result property="responsibility" javaType="string" column="responsibility"/>
    </resultMap>

    <resultMap id="menu" type="com.kazma.entity.Menu">
        <result property="menuId" javaType="int" column="menu_id"/>
        <result property="menuName" javaType="string" column="menu_name"/>
        <result property="url" javaType="string" column="url"/>
        <result property="param" javaType="string" column="param"/>
        <result property="parentId" javaType="int" column="parent_id"/>
        <result property="disOrder" javaType="int" column="dis_order"/>
        <result property="isAdmin" javaType="int" column="is_admin"/>
    </resultMap>

    <resultMap id="resource" type="com.kazma.entity.Resource">
        <result property="resourceId" javaType="int" column="id"/>
        <result property="menuId" javaType="int" column="menu_id"/>
        <result property="resName" javaType="string" column="res_name"/>
        <result property="resDesc" javaType="string" column="res_desc"/>
        <result property="isAdmin" javaType="int" column="is_admin"/>
    </resultMap>


    <insert id="regUser" parameterType="com.kazma.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user_base(login_name,password)
        VALUES (#{loginName},#{password})
    </insert>

    <select id="login" resultMap="user" parameterType="com.kazma.entity.User">
        SELECT user_id,user_name,job_num,mobile,department_id,department_name,is_admin,role,menu_permission,res_permission
        FROM user_base
        WHERE login_name = #{loginName} AND password = #{password}
    </select>

    <update id="fillUser" parameterType="com.kazma.entity.User">
        UPDATE user_base
        SET
        <if test="jobNum != null">
            job_num = #{jobNum},
        </if>
        <if test="mobile != null">
            mobile = #{mobile},
        </if>
        <if test="departmentId != null">
            department_id = #{departmentId},
        </if>
        <if test="departmentName != null">
            department_name = #{departmentName},
        </if>
        <if test="departmentName != null">
            user_name = #{userName}
        </if>
        WHERE user_id = #{userId}
    </update>

    <select id="getUserById" resultMap="user" parameterType="com.kazma.entity.User">
        SELECT user_id,user_name,job_num,mobile,department_id,department_name
        FROM user_base
        WHERE user_id = #{userId}
    </select>

    <select id="getDepartments" resultMap="department">
        SELECT id,department_name,responsibility
        FROM department
    </select>

    <insert id="addMenu" parameterType="com.kazma.entity.Menu" >
        INSERT INTO menu(
        <if test="menuName != null">
            menu_name
        </if>
        <if test="url != null">
            ,url
        </if>
        <if test="param != null">
            ,param
        </if>
        <if test="parentId != null">
            ,parent_id
        </if>
        <if test="isAdmin != null">
            ,is_admin
        </if>
        )
        VALUE
        (
        <if test="menuName != null">
            #{menuName}
        </if>
        <if test="url != null">
            ,#{url}
        </if>
        <if test="param != null">
            ,#{param}
        </if>
        <if test="parentId != null">
            ,#{parentId}
        </if>
        <if test="isAdmin != null">
            ,#{isAdmin}
        </if>
        )
    </insert>

    <select id="getMenus" resultMap="menu">
        SELECT menu_id,menu_name,url,param,parent_id,dis_order,is_admin
        FROM menu
        WHERE
        <if test="isAdmin == 0">
            is_admin = 0 AND
        </if>
        <if test="type == 1">
            parent_id = 0 AND
        </if>
        <if test="type == 2">
            parent_id != 0 AND
        </if>
         enable = 1
    </select>

    <insert id="addResource" parameterType="com.kazma.entity.Resource">
        INSERT INTO resource(menu_id,res_name
        <if test="resDesc != null">
            ,res_desc
        </if>
        <if test="isAdmin != null">
            ,is_admin
        </if>
        )
        VALUE
        (#{menuId},#{resName}
        <if test="resDesc != null">
            ,#{resDesc}
        </if>
        <if test="isAdmin != null">
            ,#{isAdmin}
        </if>
        )
    </insert>

    <select id="getResources"  resultMap="resource">
        SELECT id,menu_id,res_name,res_desc
        FROM resource
        WHERE
        <if test="isAdmin == 0">
            is_admin = 0
        </if>
    </select>

    <select id="getRoles" resultMap="role">
        SELECT role_id,role_name,role_desc,menu_permission,res_permission
        FROM role
    </select>

    <select id="getRoleByRoleIds" resultMap="role" parameterType="list">
        SELECT role_id,role_name,role_desc,menu_permission,res_permission
        FROM role
        WHERE
        <foreach collection="array" item="roleId" index="index" separator="," open="(" close=")">
            #{roleId}
        </foreach>
    </select>


</mapper>
